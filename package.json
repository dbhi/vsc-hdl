{
	"name": "vsc-hdl",
	"description": "HDL design with GHDL and VUnit",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/dbhi/vsc-hdl"
	},
	"publisher": "umarcor",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"ghdl",
		"vhdl",
		"vunit"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onView:hdlProjects",
		"onView:hdlResults"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
			"command": "extension.helloWorld",
			"title": "Hello World"
		}],
        "views": {
            "explorer": [
                {
                    "id": "hdlProjects",
                    "name": "HDL - Projects"
                },
                {
                    "id": "hdlResults",
                    "name": "HDL - Results"
                }
            ]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^12.7.5",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.2.0",
		"typescript": "^3.6.3",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.0"
	}
}
