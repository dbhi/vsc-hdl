{
	"name": "vsc-hdl",
	"displayName": "VSCode HDL Extension",
	"description": "HDL design with GHDL and VUnit",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/dbhi/vsc-hdl"
	},
	"publisher": "umarcor",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"ghdl",
		"vhdl",
		"vunit"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onView:dockerTemplates"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dockerTemplates.addTemplate",
				"title": "Docker Templates: Add"
			},
			{
				"command": "dockerTemplates.rmTemplate",
				"title": "Docker Templates: Remove"
			},
			{
				"command": "dockerTemplates.runTemplate",
				"title": "Docker Templates: Run"
			},
			{
				"command": "dockerTemplates.inspectTemplate",
				"title": "Docker Templates: Inspect"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "hdlProjects",
					"name": "HDL - Projects"
				},
				{
					"id": "hdlResults",
					"name": "HDL - Results"
				},
				{
					"id": "fileExplorer",
					"name": "File Explorer"
				}
			],
			"dockerView": [
				{
					"id": "dockerTemplates",
					"name": "Templates"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "webpack --mode production",
		"compile-dev": "webpack --mode development",
		"compile-watch": "webpack --mode development --watch",
		"build": "tsc -p ./",
		"test": "node ./dist/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.9.3",
		"@types/vscode": "^1.43.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.0",
		"ts-loader": "^6.2.2",
		"tslint": "^6.1.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.11"
	}
}
