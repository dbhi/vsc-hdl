{
	"name": "vsc-hdl",
	"description": "HDL design with GHDL and VUnit",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/dbhi/vsc-hdl"
	},
	"publisher": "umarcor",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"ghdl",
		"vhdl",
		"vunit"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onView:hdlProjects",
		"onView:hdlResults"
	],
	"main": "./main.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "hdlProjects",
					"name": "HDL - Projects"
				},
				{
					"id": "hdlResults",
					"name": "HDL - Results"
				}
			],
			"dockerView": [
				{
					"id": "dockerTasks",
					"name": "Tasks"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "webpack --mode production",
		"compile-dev": "webpack --mode development",
		"compile-watch": "webpack --mode development --watch",
		"build": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"test": "node ./dist/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^13.7.1",
		"@types/vscode": "^1.42.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"ts-loader": "^6.2.1",
		"tslint": "^6.0.0",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0",
		"webpack": "^4.41.6",
		"webpack-cli": "^3.3.10"
	}
}
